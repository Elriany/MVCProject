@model IEnumerable<MVCProject.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Category</h2>
@Html.ActionLink("Add New","Create",null,new { @class="btn btn-success"})
<table class="table table-hover">
    <thead> 
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Admin Added</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.id</td>
                <td>@cat.name</td>
                <td>@cat.description</td>
                <td>@cat.admin_added</td>
                <td>@Html.ActionLink("Delete", "Delete",new { id = @cat.id }, new { @class = "btn btn-danger" })</td>
                <td>@Html.ActionLink("Edit","Edit",new { id = @cat.id }, new { @class = "btn btn-primary" })</td>
            </tr>
        }
        
    </tbody>
</table>